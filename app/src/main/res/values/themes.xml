<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Cicilan" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <item name="colorCustomContainer">#66E5DFF9</item>
        <item name="colorCustomDialogBackground">#FDFDFD</item>

        <item name="colorRose">#b91d1d</item>
        <item name="colorOnRose">#ffffff</item>
        <item name="colorRoseContainer">#ffdad6</item>
        <item name="colorOnRoseContainer">#650104</item>
        <item name="harmonizeRose">true</item>

        <item name="colorLeaf">#286c2a</item>
        <item name="colorOnLeaf">#ffffff</item>
        <item name="colorLeafContainer">#CDFFC8</item>
        <item name="colorOnLeafContainer">#002203</item>
        <item name="harmonizeLeaf">true</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="fontFamily">@font/quick_sand_medium</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="android:windowLightStatusBar">true</item>
<!--        <item name="android:windowLightNavigationBar" tools:targetApi="28">true</item>-->
    </style>

    <!-- Splashscreen theme -->
    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_logo</item>
        <item name="windowSplashScreenBackground">@color/seed</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.Cicilan</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="28">true</item>
    </style>

    <!-- AppBar Layout & Toolbar Theme -->
    <style name="CustomAppBar" parent="Widget.Material3.AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomCollapseLarge" parent="Widget.Material3.CollapsingToolbar.Large">
        <item name="collapsedTitleTextAppearance">@style/ToolbarTitle</item>
        <item name="expandedTitleTextAppearance">@style/CustomTitleCollapseExpanded</item>
        <item name="titleCollapseMode">fade</item>
        <item name="expandedTitleMarginBottom">8dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomTitleCollapseExpanded" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">@font/quick_sand_regular</item>
    </style>

    <style name="CustomCollapseMedium" parent="Widget.Material3.CollapsingToolbar.Medium">
        <item name="collapsedTitleTextAppearance">@style/ToolbarTitle</item>
        <item name="expandedTitleTextAppearance">@style/CustomTitleCollapseExpanded</item>
        <item name="titleCollapseMode">fade</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.Material3.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/quick_sand_semi_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Custom Tab layout -->
    <style name="CustomTabLayout" parent="Widget.Material3.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabTextAppearance">@style/CustomTabText</item>
        <item name="tabSelectedTextAppearance">@style/CustomTabText</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/quick_sand_semi_bold</item>
    </style>

    <!-- Custom FAB Button -->
    <style name="CustomFAB" parent="Widget.Material3.ExtendedFloatingActionButton.Surface">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text UI Theme -->
    <style name="HeadingApp" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="fontFamily">@font/quick_sand_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>

    <style name="HeadingTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/quick_sand_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HeadingSubTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/quick_sand_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BodyTitle" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/quick_sand_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BodyHeadContent" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/quick_sand_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BodyContent" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/quick_sand_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BodySubContent" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/quick_sand_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- First Button Theme -->
    <style name="CustomFilledButton" parent="@style/Widget.Material3.Button">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/quick_sand_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Second Button Theme -->
    <style name="CustomTonalButton" parent="@style/Widget.Material3.Button.TonalButton">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/quick_sand_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Custom Text Input Layout -->
    <style name="CustomInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/quick_sand_medium</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">?attr/colorSurfaceVariant</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.Medium</item>
    </style>

    <style name="CustomInputText" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="fontFamily">@font/quick_sand_medium</item>
    </style>

    <style name="CustomAutoCompleteLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/quick_sand_medium</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">?attr/colorSurfaceVariant</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.Medium</item>
    </style>

    <!-- Custom Divider -->
    <style name="CustomDivider" parent="Widget.Material3.MaterialDivider.Heavy">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="dividerThickness">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="dividerColor">?attr/colorSurfaceVariant</item>
    </style>

    <!-- Custom Alert Dialog -->
    <style name="CustomDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/DialogCorner</item>
        <item name="colorSurface">?attr/colorCustomDialogBackground</item>
    </style>

    <style name="DialogCorner" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Large</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <!-- Custom BottomSheet Dialog -->
    <style name="CustomBottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="colorSurface">?attr/colorCustomDialogBackground</item>
    </style>
</resources>
