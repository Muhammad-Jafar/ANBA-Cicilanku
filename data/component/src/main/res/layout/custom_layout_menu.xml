<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackgroundBorderless">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iconLayoutMenu"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="16dp"
        android:background="?attr/colorCustomContainer"
        app:contentPadding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Small" />

    <TextView
        android:id="@+id/titleLayoutMenu"
        style="@style/HeadingSubTitle"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/iconLayoutMenu"
        app:layout_constraintStart_toEndOf="@+id/iconLayoutMenu"
        app:layout_constraintTop_toTopOf="@+id/iconLayoutMenu"
        tools:text="Dibuat pada" />

    <TextView
        android:id="@+id/contentLayoutMenu"
        style="@style/BodyHeadContent"
        android:layout_marginEnd="16dp"
        android:textColor="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/titleLayoutMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleLayoutMenu"
        tools:text="2 Agustus 2023" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/dividerLayoutMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/contentLayoutMenu"
        app:layout_constraintStart_toStartOf="@+id/titleLayoutMenu" />

</androidx.constraintlayout.widget.ConstraintLayout>
